#This is an example .env file for the CS2 Trade-up Tool backend.
#Please rename this file to .env and fill in the required values.

#Duration in minutes until access token expires
ACCESS_TOKEN_MINUTES=15
#Duration in days until refresh token expires
REFRESH_TOKEN_DAYS=7
#Whether to store refresh token in cookie (yes/no)
REFRESH_TOKEN_IN_COOKIE=yes
#Whether to return refresh token in response body (yes/no)
REFRESH_TOKEN_IN_BODY=no
#Your Steam API key for checking user information
STEAM_API_KEY=
#Secret key for JWT tokens and cryptographic operations
SECRET_KEY=
#Hours component of price update interval
UPDATE_PRICES_HOURS_INTERVAL=1
#Minutes component of price update interval
UPDATE_PRICES_MINUTES_INTERVAL=0
#Number of trade-ups to display per page
TRADEUPS_PER_PAGE=10
#Maximum number of trade-ups a user can track
MAX_USER_TRACKED_TRADEUPS=15
#Environment (development, production, testing)
FLASK_ENV=development
#Entry point for the Flask application
FLASK_APP=project.py
#URL of the frontend application for CORS configuration
FRONTEND_URL=http://localhost:3000
#Database driver (postgresql, mysql, etc.)
DB_DRIVERNAME=postgresql
#Database host address
DB_HOST=localhost
#Database port
DB_PORT=5432
#Database username
DB_USER=postgres
#Database name
DB_NAME=database
#Database password
DB_PASS=password
#Enable debug mode (1=enabled, 0=disabled)
FLASK_DEBUG=1